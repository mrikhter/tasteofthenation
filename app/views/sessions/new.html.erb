<div class="container">
    <div class="content">
<!--       <div class="row"> -->
        <div class="form-headers">
      <h2>Log In</h2>  
    </div>
    <% if alert %>
        <div class="alert alert-error">
            <% flash.each do |name, msg| %>
          <%= msg %>
        <% end %>
      </div>
      <% end %>
      <div class="login-form">
       <fieldset>
        <div class="clearfix"> 
      <%= form_tag sessions_path, {:class => 'form-4'} do  %>  
        <p>  
          <%= text_field_tag :username, params[:username], :placeholder => 'username' %>  
        </p>  
      </div>
        <button class="btn btn-main" type="submit">Log In</button></br></br> 
      <% end %> 
      Not a member? <span id="signup"><%= link_to "Sign Up", new_user_path%></span></br></br> 
      <div class="link">
          <%= link_to "nokidhungry.org", "http://www.nokidhungry.org", :target => '_blank'%>
          </div>
      </fieldset>
<!--       </div> -->
    </div>
  </div>
</div>

          <% if flash[:notice] %>
          <div class="alert alert-error">
            <center><p id='notice'><i class="icon-warning-sign icon-white"></i> <strong><%= flash[:notice] %></strong></p></center>
          </div>
          <% end %>